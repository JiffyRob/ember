{"ember_version": "0.0.1",
  "asset_directory": "",
  "image_edge": [5,5,5,5],

  "elements": {

    "Text": { "font": [ "PixelFont", "pixel" ] },

    "View": {},

    "Container": {
      "sizes": {"Layout": "FILL"},
      "min_spacing": 6
    },

    "Section": {
        "focus_material": ["RoundedRect", [190, 115, 90], 3, 1, false]
    },

    "Button": {
      "default_state": [
        "ButtonState",
        { "element_offset": [ 0, -1 ] }
      ],
      "click_state": [
        "ButtonState",
        { "element_offset": [ 0, 0 ] }
      ],
      "size": [ 100, 24 ]
    },

    "button2": {
      "type": "Button",
      "size": [ 100, 24 ]
    },

    "Toggle": {
      "size": [ 30, 15 ],
      "handle_width_ratio": 0.95
    },

    "Slider": {
      "size": [ 60, 15 ],
      "handle_width_ratio": 0.95
    },

    "text_field_scroll": {
      "type": "Scroll",
      "default_handle_material": [
        "AverageColor",
        [ 0, 0, 30 ]
      ],
      "hover_handle_material": [
        "AverageColor",
        [ 0, 0, 40 ]
      ],
      "click_handle_material": [
        "AverageColor",
        [ 0, -20, 70 ]
      ],
      "handle_material_transition": [ "SurfaceFade", 0.15 ],
      "padding": 2,
      "scrollbar_size": 2
    },


    "TextField": {
      "highlight_color": [ 80, 80, 90 ],
      "size": [ 100, 24 ],
      "scroll_style": ["Style", "text_field_scroll"],
      "default_h_scroll_size": [
        [ "FILL", 1, -12 ],
        [ "FILL", 1, -6 ]
      ],
      "default_v_scroll_size": [
        [ "FILL", 1, -6 ],
        [ "FILL", 1, -12 ]
      ]
    },

    "Scroll": {
      "default_handle_material": [
        "AverageColor",
        [ 0, 0, 30 ]
      ],
      "hover_handle_material": [
        "AverageColor",
        [ 0, 0, 40 ]
      ],
      "click_handle_material": [
        "AverageColor",
        [ 0, -20, 70 ]
      ],
      "handle_material_transition": [ "SurfaceFade", 0.15 ],
      "padding": 6,
      "scrollbar_size": 3
    }
  },

  "constants": {
    "background_color": [40, 40, 50]
  }
}